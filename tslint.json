{
  "extends": [
    "tslint:latest",
    "tslint-eslint-rules",
    "tslint-react",
    "tslint-consistent-codestyle",
    "tslint-config-airbnb",
    "tslint-config-prettier"
  ],
  "rules": {
    "jsx-boolean-value": false,
    "no-submodule-imports": [true, "classnames", "common", "components", "react-icons"],
    "no-implicit-dependencies": [true, ["common", "pages", "components"]],
    "variable-name": [true, "allow-pascal-case"],
    "ordered-imports": [
      true,
      {
        "named-imports-order": "case-insensitive"
      }
    ]
  }
}
