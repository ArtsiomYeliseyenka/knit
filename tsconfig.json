{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "es2015",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "pages": ["src/pages"],
      "store": ["src/store"],
      "components/*": ["src/components/*"],
      "common/*": ["src/common/*"],
      "reducers/*": ["src/store/reducers/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
